{
    "parser":  "@typescript-eslint/parser",
    "extends":  [
        "plugin:react/recommended",
        "plugin:@typescript-eslint/recommended"
    ],
    "parserOptions": {
        "ecmaVersion": 2018,
        "sourceType": "module",
        "ecmaFeatures": {
            "jsx": "true"
        }
    },
    "plugins": [
        "react"
    ],
    "rules": {
        "require-jsdoc": 0
    },
    "settings": {
        "react": {
            "version": "detect"
        }
    }
}